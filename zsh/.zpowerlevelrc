
# -> Source: https://github.com/chris-murray/powerlevel9k-custom

POWERLEVEL9K_MODE='awesome-fontconfig'

POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(status context dir)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(background_jobs history time)
POWERLEVEL9K_SHORTEN_DIR_LENGTH=4
POWERLEVEL9K_STATUS_VERBOSE=false

# Home icon
POWERLEVEL9K_HOME_ICON=$'\UF015'

# Folder icon
POWERLEVEL9K_HOME_SUB_ICON=$'\UF07C'
POWERLEVEL9K_FOLDER_ICON=$'\UF07C'

POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX=""
POWERLEVEL9K_MULTILINE_SECOND_PROMPT_PREFIX="$ "

# yellow/black
POWERLEVEL9K_CONTEXT_DEFAULT_BACKGROUND="011"
POWERLEVEL9K_CONTEXT_DEFAULT_FOREGROUND="000"

# red/white
POWERLEVEL9K_CONTEXT_ROOT_BACKGROUND="001"
POWERLEVEL9K_CONTEXT_ROOT_FOREGROUND="015"

# blue/white
POWERLEVEL9K_DIR_DEFAULT_BACKGROUND="004"
POWERLEVEL9K_DIR_DEFAULT_FOREGROUND="015"

# black
POWERLEVEL9K_STATUS_BACKGROUND="232"
